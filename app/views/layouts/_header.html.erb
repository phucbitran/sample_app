<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".link1"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link_home"), root_path %></li>
        <li><%= link_to t(".link_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".link_user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".p_content" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".link_Profile"), current_user %></li>
              <li><%= link_to t(".link_Settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".Logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".link_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
